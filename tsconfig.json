{
  "compilerOptions": {
    "jsx": "react-native",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "nodenext",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["**/*.ts", "**/*.tsx", "declarations.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
